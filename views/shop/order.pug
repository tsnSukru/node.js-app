include ../layouts/mainLayout.pug

if orders.length === 0
  p Sepetiniz bo≈ü.
else
  ol
    each order in orders
      li
        div(style="margin: 50px 50px 50px 50px; border-style:solid; border-width: 1px;")
          each item in order.items
            img(src=`/img/${item.product.imageUrl}` style="width:150px;")
            h2= item.product.name
            p Fiyat: #{item.product.price} TL
            p Miktar: #{item.quantity}
